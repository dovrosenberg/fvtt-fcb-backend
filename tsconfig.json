{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    },
},
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": ["node_modules", "dist"]
}
