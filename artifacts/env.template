###########################################################
# Email Configuration
###########################################################
# Set to false if you don't want to use the email functionality
INCLUDE_EMAIL_SETUP=true

# Gmail API credentials - get from Google Cloud Console
# Enable Gmail API and create OAuth 2.0 credentials
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# You will fill this in after you run the script the first but it must remain blank until then; if you're getting email access errors, delete it and rerun the script
GMAIL_REFRESH_TOKEN=

